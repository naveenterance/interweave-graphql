// schema.prisma
datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model User {
id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  password  String
  email     String
  avatar    String
  cart      String[]
}

generator client {
  provider = "prisma-client-js"
}
